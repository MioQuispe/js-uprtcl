{
  "name": "@uprtcl/common",
  "version": "0.0.1-alpha3",
  "description": "Collection of common Cortex modules, developed as the starting point for many applications",
  "author": "guillemcordoba <guillem.cordoba@gmail.com>",
  "homepage": "https://github.com/uprtcl/spec/",
  "license": "MIT",
  "main": "dist/uprtcl-common.umd.js",
  "module": "dist/uprtcl-common.es5.js",
  "typings": "dist/types/uprtcl-common.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/uprtcl/js-uprtcl/"
  },
  "scripts": {
    "build": "npm run clean && rollup -c rollup.config.ts",
    "clean": "rimraf dist docs",
    "test": "karma start --coverage",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "test:update-snapshots": "karma start --update-snapshots",
    "test:prune-snapshots": "karma start --prune-snapshots",
    "test:compatibility": "karma start --compatibility all --coverage",
    "test:compatibility:watch": "karma start --compatibility all --auto-watch=true --single-run=false",
    "test:bs": "karma start karma.bs.config.js --legacy --coverage",
    "docs:build": "typedoc --out docs --target es6 --theme minimal --mode file src",
    "site:build": "npm run storybook:build",
    "storybook": "tsc && tsc -w & start-storybook -p 9001",
    "storybook:build": "npm run build && build-storybook -o _site -s storybook-static"
  },
  "dependencies": {
    "@uprtcl/connections": "^0.0.1-alpha3",
    "@uprtcl/cortex": "^0.0.1-alpha3",
    "@uprtcl/micro-orchestrator": "^0.0.1-alpha3",
    "cids": "^0.7.1",
    "dexie": "^2.0.4",
    "dexie-observable": "^1.0.0-beta.5",
    "inversify": "^5.0.1",
    "lit-element": "^2.2.1",
    "lodash": "^4.17.15",
    "multihashing-async": "^0.8.0",
    "pwa-helpers": "^0.9.1",
    "redux": "^4.0.4",
    "redux-saga": "^1.1.3",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@open-wc/demoing-storybook": "^0.3.0",
    "@open-wc/testing": "^0.11.1",
    "@open-wc/testing-karma": "^3.0.0",
    "@open-wc/testing-karma-bs": "^1.0.0",
    "@types/storybook__react": "^4.0.2",
    "es-dev-server": "^1.5.0",
    "rimraf": "^2.6.3",
    "rollup": "^0.67.0",
    "rollup-plugin-commonjs": "^9.1.8",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.18.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.3",
    "webpack-merge": "^4.1.5"
  }
}
